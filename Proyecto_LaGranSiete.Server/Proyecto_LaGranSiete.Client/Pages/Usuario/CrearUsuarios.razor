@page "/Api/Usuario"
@using Proyecto_LaGranSiete.Client.Servicios
@inject IHTTPServicio http
@using Proyecto_LaGranSiete.BD.Data.Entity
@inject NavigationManager navigationManager



<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Registro de Usuarios</title>
    <link href="./css/Usuarios.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f5f5f5;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .container {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .center-form {
            max-width: 600px;
            width: 100%;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .header-title {
            color: #dc3545;
            font-weight: bold;
        }

        .highlight-text {
            color: #28a745;
            font-weight: bold;
        }

        .form-control {
            border: 2px solid #ced4da;
            padding: 10px;
            border-radius: 5px;
        }

            .form-control:focus {
                border-color: #0072ff;
                box-shadow: 0 0 5px rgba(0, 114, 255, 0.5);
            }

        .btn-primary {
            background: linear-gradient(90deg, #00c6ff 0%, #0072ff 100%);
            border: none;
        }

            .btn-primary:hover {
                background: linear-gradient(90deg, #0072ff 0%, #00c6ff 100%);
            }

        footer {
            margin-top: 20px;
            padding: 10px;
            background: #333;
            color: #fff;
            text-align: center;
        }
    </style>
</head>
<body>
    <header class="text-center mb-5">
        <h1 class="header-title text-uppercase">Usuarios</h1>
        <h2 class="text-center mb-4">Registro de Usuarios</h2>
    </header>
    <main class="container">
        <div class="center-form">
            <form class="w-100">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" required>
                </div>
                <div class="mb-3">
                    <label for="apellido" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="apellido" required>
                </div>
                <div class="mb-3">
                    <label for="fechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                    <input type="date" class="form-control" id="fechaNacimiento" required>
                </div>
                <div class="mb-3">
                    <label for="telefono" class="form-label">Teléfono</label>
                    <input type="tel" class="form-control" id="telefono" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Correo Electrónico</label>
                    <input type="email" class="form-control" id="email" required>
                </div>
                <div class="mb-3">
                    <label for="parentesco" class="form-label">Parentesco</label>
                    <input type="text" class="form-control" id="parentesco" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Registrar</button>
                </div>
            </form>
        </div>
    </main>
    <footer>
        <p>Todos los derechos reservados</p>
    </footer>
</body>
</html>
    

@code {
    private Usuario usuarios = new Usuario();

    private async Task Grabar()
    {
        var httpRespuesta = await http.Post<Usuario>("Api/Usuario", usuarios);

        if (httpRespuesta.Error)
        {
            var body = httpRespuesta.HttpResponseMessage;
        }
        navigationManager.NavigateTo("Api/Usuario");
    }

    private void Cancelar()
    {
        navigationManager.NavigateTo("Api/Usuario");
    }
}
